{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "jsx": "react",
        "jsxFactory": "h",
        "allowJs": true,
        "outDir": "./build",
        "baseUrl": "./",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "paths": {
        "@app": [
            "./src/index.ts"
        ],
        "@app/*": [
            "./src/*"
        ]
    }
}
